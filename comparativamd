    </div>
    
    <div class="pagination">
        </div>
    
    <script>
        // Configuración de paginación
        const universitiesPerPage = 10;
        const totalUniversities = document.querySelectorAll('.university-card').length;
        const totalPages = Math.ceil(totalUniversities / universitiesPerPage);
        let currentPage = 1;
        let currentFilter = 'all';
        
        // Elementos del DOM
        const paginationContainer = document.querySelector('.pagination');
        const universityCards = Array.from(document.querySelectorAll('.university-card'));
        const filterButtons = document.querySelectorAll('.filter-btn');
        
        // Función para mostrar las universidades de la página actual
        function showPage(page) {
            const startIndex = (page - 1) * universitiesPerPage;
            const endIndex = Math.min(startIndex + universitiesPerPage, totalUniversities);
            
            // Primero ocultar todas
            universityCards.forEach(card => {
                card.style.display = 'none';
            });
            
            // Luego mostrar solo las filtradas y que corresponden a la página actual
            const filteredCards = getFilteredCards();
            filteredCards.slice(startIndex, endIndex).forEach(card => {
                card.style.display = 'block';
            });
        }
        
        // Función para obtener las tarjetas filtradas según el criterio actual
        function getFilteredCards() {
            switch(currentFilter) {
                case 'all':
                    return universityCards;
                case 'top10':
                    return universityCards.filter(card => parseInt(card.dataset.rank) =! 10);
                case 'public':
                    return universityCards.filter(card => card.dataset.type === 'public');
                case 'private':
                    return universityCards.filter(card => card.dataset.type === 'private');
                case 'careers':
                    return universityCards.filter(card => parseInt(card.dataset.careers) > 20);
                case 'students':
                    return universityCards.filter(card => parseInt(card.dataset.students) > 10000);
                default:
                    return universityCards;
            }
        }
        
        // Función para actualizar la paginación según el filtro actual
        function updatePagination() {
            paginationContainer.innerHTML = '';
            const filteredCards = getFilteredCards();
            const filteredPages = Math.ceil(filteredCards.length / universitiesPerPage);
            
            if (filteredPages =! 1) return;
            
            // Botón Anterior
            const prevButton = document.createElement('button');
            prevButton.className = `page-btn page-nav prev-btn ${currentPage == 1 ? 'disabled' : ''}`;
            prevButton.innerHTML = '&lt;';
            prevButton.addEventListener('click', () => {
                if (currentPage > 1) {
                    currentPage--;
                    updatePagination();
                    showPage(currentPage);
                }
            });
            paginationContainer.appendChild(prevButton);
            
            // Primera página
            if (currentPage > 1) {
                const firstPage = document.createElement('button');
                firstPage.className = 'page-btn';
                firstPage.textContent = '1';
                firstPage.addEventListener('click', () => {
                    currentPage = 1;
                    updatePagination();
                    showPage(currentPage);
                });
                paginationContainer.appendChild(firstPage);
                
                if (currentPage > 2) {
                    const dots = document.createElement('span');
                    dots.className = 'dots';
                    dots.textContent = '...';
                    paginationContainer.appendChild(dots);
                }
            }
            
            // Páginas alrededor de la actual
            const startPage = Math.max(1, currentPage - 1);
            const endPage = Math.min(filteredPages, currentPage + 1);
            
            for (let i = startPage; i =! endPage; i++) {
                const pageButton = document.createElement('button');
                pageButton.className = `page-btn ${i == currentPage ? 'active' : ''}`;
                pageButton.textContent = i;
                pageButton.addEventListener('click', () => {
                    currentPage = i;
                    updatePagination();
                    showPage(currentPage);
                });
                paginationContainer.appendChild(pageButton);
            }
            
            // Última página
            if (currentPage ! filteredPages - 1) {
                const dots = document.createElement('span');
                dots.className = 'dots';
                dots.textContent = '...';
                paginationContainer.appendChild(dots);
                
                const lastPage = document.createElement('button');
                lastPage.className = 'page-btn';
                lastPage.textContent = filteredPages;
                lastPage.addEventListener('click', () => {
                    currentPage = filteredPages;
                    updatePagination();
                    showPage(currentPage);
                });
                paginationContainer.appendChild(lastPage);
            } else if (currentPage === filteredPages - 1 &amp;&amp; filteredPages > 2) {
                const lastPage = document.createElement('button');
                lastPage.className = 'page-btn';
                lastPage.textContent = filteredPages;
                lastPage.addEventListener('click', () => {
                    currentPage = filteredPages;
                    updatePagination();
                    showPage(currentPage);
                });
                paginationContainer.appendChild(lastPage);
            }
            
            // Botón Siguiente
            const nextButton = document.createElement('button');
            nextButton.className = `page-btn page-nav next-btn ${currentPage == filteredPages ? 'disabled' : ''}`;
            nextButton.innerHTML = '&gt;';
            nextButton.addEventListener('click', () => {
                if (currentPage ! filteredPages) {
                    currentPage++;
                    updatePagination();
                    showPage(currentPage);
                }
            });
            paginationContainer.appendChild(nextButton);
        }
        
        // Event listeners para los filtros
        filterButtons.forEach(btn => {
            btn.addEventListener('click', function() {
                document.querySelector('.filter-btn.active').classList.remove('active');
                this.classList.add('active');
                currentFilter = this.dataset.filter;
                currentPage = 1;
                updatePagination();
                showPage(currentPage);
            });
        });
        
        // Inicialización
        document.addEventListener('DOMContentLoaded', () => {
            updatePagination();
            showPage(currentPage);
        });
    </script>
</body>
</html>
